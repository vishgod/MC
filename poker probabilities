rf_amount = 0
sf_amount = 0
four_amount = 0
full_house_amount = 0
flush_amount = 0
straight_amount = 0
triple_amount = 0
two_pair_amount = 0
pair_amount = 0
high_card_amount = 0

for i in range(100000):
  a = random.choice(community)
  if spc_hand(a) == "ROYAL FLUSH!":
    rf_amount += 1
  elif spc_hand(a) == "straight flush":
    sf_amount += 1
  elif spc_hand(a) == "four of a kind":
    four_amount += 1
  elif spc_hand(a) == "full house":
    full_house_amount += 1
  elif spc_hand(a) == "flush":
    flush_amount += 1
  elif spc_hand(a) == "straight":
    straight_amount += 1
  elif spc_hand(a) == "three of a kind":
    triple_amount += 1
  elif spc_hand(a) == "double pair":
    two_pair_amount += 1
  elif spc_hand(a) == "pair":
    pair_amount += 1
  else:
    high_card_amount += 1

print ("Royal Flush amount = {}" .format(rf_amount))
print ("Straight Flush amount = {}" .format(sf_amount))
print ("Four of a Kind amount = {}" .format(four_amount))
